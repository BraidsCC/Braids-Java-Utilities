<?xml version="1.0" encoding="UTF-8"?>

<!-- Ant build file for Braids-Java-Utilities -->
	
<project name="Braids-Java-Utilities" default="makeJar" basedir=".">

	<target name="makeJar" 
	     description="Create a jar file for Braids-Java-Utilities.">

  	<mkdir dir="build.tmp"/>  	
	<manifest file="build.tmp/MANIFEST.MF" />
  	
    <jar jarfile="build.tmp/Braids-Java-Utilities.jar" 
        manifest="build.tmp/MANIFEST.MF">

      <fileset dir="bin"/>
    	
    </jar>
  </target>
</project>
